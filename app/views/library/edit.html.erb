<h1 class="title">Edit a book's information</h1>

<%= form_for @book, url: library_path(@book), html: { method: :patch } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :pages %>
  <%= f.number_field :pages %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.submit %>
<% end %>
