<div class="home-banner">
  <h1>My Library</h1>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-12">
        <div class="books">
        <% @books.each do |book| %>
            <div class="book-card align-items-center" style="width: 18rem;">
              <div style="padding-top: 10px;">
                <% if book.photo.attached? %>
                  <%= cl_image_tag book.photo.key, :width=>200, :height=>300, :crop=>"fill" %>
                <% else %>
                  <%= image_tag "book.png", class:"book-card-img" %>
                <% end %>
                <%= link_to library_path(book), class: 'book-link' do %>
              </div>  
                <div class="card-body">
                  <h3><%= book.title %></h1>
                  <p><%= book.author %></p>
                  <p><%= book.pages %> pages</p>
                  <p><%='⭐️'* book.rating %></p>
                  <p><%= book.reviews.count %> Reviews</p>
                </div>
              <% end %>
            </div>
        <% end %>
        
